# Raspberry Pi SSH Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

# SSH credentials for Raspberry Pi
RASPBERRY_PI_SSH_USERNAME=pi
RASPBERRY_PI_SSH_PASSWORD=your_password_here

# Raspberry Pi network addresses
RASPBERRY_PI_HOST=raspberry.local
RASPBERRY_PI_API_ADDRESS=192.168.x.x

# Path to the Stellar backend repository (for building)
STELLAR_BACKEND_FOLDER=/path/to/stellar-volumio-audioplayer-backend/

# Windows NAS Configuration (optional)
NAS_IP=192.168.x.x
NAS_SHARE=ShareName
NAS_USERNAME="Your Username"
NAS_PASSWORD="your_password"
